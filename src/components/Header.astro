---
const navItems = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/about' },
  { label: 'Services', href: '/services' },
  { label: 'Projects', href: '/projects' },
  { label: 'White Papers', href: '/whitepapers' },
  { label: 'Blog', href: '/blog' },
  { label: 'Contact', href: '/contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-primary-dark text-white sticky top-0 z-50 shadow-lg">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="flex items-center gap-3">
        <div class="w-10 h-10 bg-accent rounded-lg flex items-center justify-center font-bold text-primary-dark text-lg">
          JMB
        </div>
        <div class="hidden sm:block">
          <div class="text-lg font-bold tracking-tight">JMB Technical</div>
          <div class="text-xs text-text-light -mt-1">Industrial Automation</div>
        </div>
      </a>

      <!-- Desktop nav -->
      <div class="hidden md:flex items-center gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'px-3 py-2 rounded-md text-sm font-medium transition-colors',
              currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                ? 'bg-primary text-white'
                : 'text-gray-300 hover:bg-primary-light hover:text-white',
            ]}
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-md text-gray-300 hover:text-white hover:bg-primary-light"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile nav -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      {navItems.map((item) => (
        <a
          href={item.href}
          class:list={[
            'block px-3 py-2 rounded-md text-base font-medium transition-colors',
            currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
              ? 'bg-primary text-white'
              : 'text-gray-300 hover:bg-primary-light hover:text-white',
          ]}
        >
          {item.label}
        </a>
      ))}
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
