---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article>
    <header class="bg-primary-dark text-white py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <a href="/blog" class="text-accent text-sm font-medium hover:text-white transition-colors mb-6 inline-block">
          &larr; Back to Blog
        </a>
        <h1 class="text-3xl md:text-4xl font-extrabold mb-4">{post.data.title}</h1>
        <div class="flex items-center gap-4 text-gray-300 text-sm">
          <time datetime={post.data.date.toISOString()}>
            {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
          {post.data.tags && (
            <div class="flex gap-2">
              {post.data.tags.map((tag: string) => (
                <span class="bg-white/10 px-2 py-0.5 rounded text-xs">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </div>
    </header>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="prose prose-lg max-w-none prose-headings:text-primary-dark prose-a:text-accent hover:prose-a:text-primary prose-code:bg-gray-100 prose-code:px-1 prose-code:rounded">
        <Content />
      </div>
    </div>
  </article>
</BaseLayout>
