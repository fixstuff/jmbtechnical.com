---
import BaseLayout from '../layouts/BaseLayout.astro';

const whitepapers = [
  {
    title: 'Clustering - Distributed Real-Time PLC Performance',
    description: '10.4x throughput improvement, 620,949 aggregate scans/sec, linear scaling to 500+ minions. Covers the boss/minion distributed architecture that breaks the monolithic PLC paradigm, achieving sub-50-microsecond scan times on commodity hardware.',
    date: 'February 2026',
    version: '1.0',
    tags: ['Clustering', 'Real-Time', 'Benchmarks'],
    pdf: 'https://github.com/fixstuff/GOPLC-Showcase/raw/main/docs/whitepaper-clustering.pdf',
    markdown: 'https://github.com/fixstuff/GOPLC-Showcase/blob/main/docs/whitepaper-clustering.md',
  },
  {
    title: 'Datacenter Gateway - Universal Protocol Gateway',
    description: 'Three-tier DC hierarchy, 12 protocol drivers, dual-path MQTT + DNP3 store-and-forward, redundancy strategies, and AI-assisted commissioning. GOPLC as a universal protocol gateway normalizing Modbus, SNMP, BACnet, EtherNet/IP and more into unified OPC UA/MQTT/DNP3 northbound feeds.',
    date: 'January 2026',
    version: '1.1',
    tags: ['Data Center', 'Protocol Gateway', 'BMS/EPMS'],
    pdf: 'https://github.com/fixstuff/GOPLC-Showcase/raw/main/docs/whitepaper-datacenter-gateway.pdf',
    markdown: 'https://github.com/fixstuff/GOPLC-Showcase/blob/main/docs/whitepaper-datacenter-gateway.md',
  },
  {
    title: 'DC Simulation - Hardware Gateway Architecture',
    description: 'A full-stack, protocol-native digital twin for hyperscale datacenter operations. 11 device simulators, 6 gateway blueprints, scale estimates from 50 MW to 1 GW, ctrlX CORE edge SBC deployment, and full cost modeling.',
    date: 'February 2026',
    version: '1.0',
    tags: ['Data Center', 'Digital Twin', 'Hardware'],
    pdf: 'https://github.com/fixstuff/GOPLC-Showcase/raw/main/docs/WHITEPAPER_DC_SIMULATION_HARDWARE.pdf',
    markdown: 'https://github.com/fixstuff/GOPLC-Showcase/blob/main/docs/WHITEPAPER_DC_SIMULATION_HARDWARE.md',
  },
  {
    title: 'DC Simulation - Virtualized Gateway Architecture',
    description: 'Eliminating edge hardware with server-based gateways and routed VLANs. 51-66% total cost reduction vs hardware gateways, migration paths from hardware to virtualized, and IEC 62443 security considerations.',
    date: 'February 2026',
    version: '1.0',
    tags: ['Data Center', 'Virtualization', 'Cost Reduction'],
    pdf: 'https://github.com/fixstuff/GOPLC-Showcase/raw/main/docs/WHITEPAPER_DC_SIMULATION_VIRTUAL.pdf',
    markdown: 'https://github.com/fixstuff/GOPLC-Showcase/blob/main/docs/WHITEPAPER_DC_SIMULATION_VIRTUAL.md',
  },
];

const reports = [
  {
    title: 'Water Treatment Plant Simulation - Performance Report',
    description: 'Monolith vs in-process cluster architecture comparison. 37 programs showing the monolith cannot sustain 100ms scan (averaging 130ms) while the 10-node cluster achieves 13x faster execution with zero watchdog faults.',
    date: 'February 2026',
    tags: ['Performance', 'Water Treatment', 'Benchmarks'],
    pdf: 'https://github.com/fixstuff/GOPLC-Showcase/raw/main/docs/WTP_Performance_Report.pdf',
    markdown: 'https://github.com/fixstuff/GOPLC-Showcase/blob/main/docs/WTP_Performance_Report.md',
  },
];
---

<BaseLayout title="White Papers & Reports" description="Technical white papers and performance reports on GOPLC distributed PLC architecture, datacenter gateway design, and industrial simulation.">
  <!-- Hero -->
  <section class="bg-primary-dark text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-extrabold mb-6">White Papers & Reports</h1>
        <p class="text-xl text-gray-300 leading-relaxed">
          In-depth technical documents covering distributed PLC architecture, datacenter infrastructure, and industrial simulation performance.
        </p>
      </div>
    </div>
  </section>

  <!-- White Papers -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-primary-dark mb-12">White Papers</h2>
      <div class="grid gap-8">
        {whitepapers.map((paper) => (
          <div class="bg-white border border-gray-100 rounded-xl p-8 hover:shadow-lg transition-shadow">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
              <div class="flex-1">
                <div class="flex flex-wrap gap-2 mb-3">
                  {paper.tags.map((tag) => (
                    <span class="bg-accent/10 text-accent text-xs font-semibold px-2.5 py-0.5 rounded-full">{tag}</span>
                  ))}
                </div>
                <h3 class="text-xl font-bold text-primary-dark mb-2">{paper.title}</h3>
                <p class="text-text-light text-sm leading-relaxed mb-3">{paper.description}</p>
                <div class="text-xs text-gray-400">
                  {paper.date} &middot; Version {paper.version}
                </div>
              </div>
              <div class="flex flex-col gap-2 md:flex-shrink-0 md:ml-8">
                <a href={paper.pdf} target="_blank" rel="noopener" class="inline-flex items-center gap-2 bg-accent hover:bg-accent-dark text-primary-dark font-semibold px-5 py-2.5 rounded-lg transition-colors text-sm">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M14 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zm-1 2l5 5h-5V4zM6 20V4h5v7h7v9H6z"/></svg>
                  Download PDF
                </a>
                <a href={paper.markdown} target="_blank" rel="noopener" class="inline-flex items-center gap-2 border border-gray-300 hover:border-accent hover:text-accent px-5 py-2.5 rounded-lg transition-colors text-sm text-text">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                  View on GitHub
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Reports -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-primary-dark mb-12">Technical Reports</h2>
      <div class="grid gap-8">
        {reports.map((report) => (
          <div class="bg-white border border-gray-100 rounded-xl p-8 hover:shadow-lg transition-shadow">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
              <div class="flex-1">
                <div class="flex flex-wrap gap-2 mb-3">
                  {report.tags.map((tag) => (
                    <span class="bg-primary-dark/10 text-primary-dark text-xs font-semibold px-2.5 py-0.5 rounded-full">{tag}</span>
                  ))}
                </div>
                <h3 class="text-xl font-bold text-primary-dark mb-2">{report.title}</h3>
                <p class="text-text-light text-sm leading-relaxed mb-3">{report.description}</p>
                <div class="text-xs text-gray-400">{report.date}</div>
              </div>
              <div class="flex flex-col gap-2 md:flex-shrink-0 md:ml-8">
                <a href={report.pdf} target="_blank" rel="noopener" class="inline-flex items-center gap-2 bg-accent hover:bg-accent-dark text-primary-dark font-semibold px-5 py-2.5 rounded-lg transition-colors text-sm">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M14 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zm-1 2l5 5h-5V4zM6 20V4h5v7h7v9H6z"/></svg>
                  Download PDF
                </a>
                <a href={report.markdown} target="_blank" rel="noopener" class="inline-flex items-center gap-2 border border-gray-300 hover:border-accent hover:text-accent px-5 py-2.5 rounded-lg transition-colors text-sm text-text">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                  View on GitHub
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
